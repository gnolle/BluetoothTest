<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.jkn.bluetoothtest.MainActivity">

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <com.example.jkn.bluetoothtest.cards.IconActionCard
            android:id="@+id/btn_color"
            android:layout_height="match_parent"
            app:icon="@drawable/ic_color"
            app:layout_heightPercent="100%"
            app:layout_widthPercent="50%"
            app:textTop="Change color"
            app:textBottom="255/255/255"/>

        <com.example.jkn.bluetoothtest.cards.IconActionCard
            android:layout_toRightOf="@id/btn_color"
            android:id="@+id/btn_mode"
            android:layout_height="match_parent"
            app:icon="@drawable/ic_debug"
            app:layout_heightPercent="100%"
            app:layout_widthPercent="50%"
            app:textTop="Change mode"
            app:textBottom="Time only"/>

    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <com.example.jkn.bluetoothtest.cards.TextActionCard
            android:id="@+id/temperature_card"
            app:layout_heightPercent="100%"
            app:layout_widthPercent="50%"
            app:textAction="\?"
            app:textBottom="no data"
            app:textTop="Temperature" />

        <com.example.jkn.bluetoothtest.cards.TextActionCard
            android:layout_toRightOf="@id/temperature_card"
            android:id="@+id/time_card"
            app:textAction="\?"
            app:layout_heightPercent="100%"
            app:layout_widthPercent="50%"
            app:textTop="Time" />

    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <com.example.jkn.bluetoothtest.cards.TextActionCard
            android:id="@+id/btn_brightness"
            android:layout_weight="1"
            app:layout_heightPercent="100%"
            app:layout_widthPercent="50%"
            app:textAction="\?"
            app:textTop="Brightness" />

        <com.example.jkn.bluetoothtest.cards.IconActionCard
            android:id="@+id/btn_bluetooth"
            android:layout_toRightOf="@id/btn_brightness"
            android:layout_weight="1"
            app:icon="@drawable/ic_bluetooth_disconnect"
            app:layout_heightPercent="100%"
            app:layout_widthPercent="50%"
            app:textBottom="disconnected"
            app:textTop="Connection" />

    </android.support.percent.PercentRelativeLayout>

</LinearLayout>
